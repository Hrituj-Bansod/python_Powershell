{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "functions": [],
    "variables": {},
    "resources": [{
        "name": "windVM1-PublicIP",
        "type": "Microsoft.Network/publicIPAddresses",
        "apiVersion": "2023-04-01",
        "location": "[resourceGroup().location]",
        "tags": {
            "displayName": "PublicIPAddress"
        },
        "properties": {
            "publicIPAllocationMethod": "Dynamic",
            "dnsSettings": {
                "domainNameLabel": "[toLower('windVM1')]"
            }
        }
    },
    {
        "name": "windVM1-nsg",
        "type": "Microsoft.Network/networkSecurityGroups",
        "apiVersion": "2023-04-01",
        "location": "[resourceGroup().location]",
        "properties": {
            "securityRules": [
                {
                    "name": "nsgRule1",
                    "properties": {
                        "description": "description",
                        "protocol": "Tcp",
                        "sourcePortRange": "*",
                        "destinationPortRange": "3389",
                        "sourceAddressPrefix": "*",
                        "destinationAddressPrefix": "*",
                        "access": "Allow",
                        "priority": 100,
                        "direction": "Inbound"
                    }
                }
            ]
        }
    },
    {
        "name": "windVM1-VirtualNetwork",
        "type": "Microsoft.Network/virtualNetworks",
        "apiVersion": "2023-04-01",
        "location": "[resourceGroup().location]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/networkSecurityGroups', 'windVM1-nsg')]"
        ],
        "tags": {
            "displayName": "windVM1-VirtualNetwork"
        },
        "properties": {
            "addressSpace": {
                "addressPrefixes": [
                    "10.5.0.0/18"
                ]
            },
            "subnets": [
                {
                    "name": "windVM1-VirtualNetwork-Subnet",
                    "properties": {
                        "addressPrefix": "10.5.16.0/20",
                        "networkSecurityGroup": {
                            "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'windVM1-nsg')]"
                        }
                    }
                }
            ]
        }
    },
    {
        "name": "windVM1-NetworkInterface",
        "type": "Microsoft.Network/networkInterfaces",
        "apiVersion": "2023-04-01",
        "location": "[resourceGroup().location]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/publicIPAddresses', 'windVM1-PublicIP')]",
            "[resourceId('Microsoft.Network/virtualNetworks', 'windVM1-VirtualNetwork')]"
        ],
        "tags": {
            "displayName": "windVM1 Network Interface"
        },
        "properties": {
            "ipConfigurations": [
                {
                    "name": "ipConfig1",
                    "properties": {
                        "privateIPAllocationMethod": "Dynamic",
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'windVM1-PublicIP')]"
                        },
                        "subnet": {
                            "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'windVM1-VirtualNetwork', 'windVM1-VirtualNetwork-Subnet')]"
                        }
                    }
                }
            ]
        }
    },
    {
        "name": "windVM1",
        "type": "Microsoft.Compute/virtualMachines",
        "apiVersion": "2023-03-01",
        "location": "[resourceGroup().location]",
        "dependsOn": [
           // "[resourceId('Microsoft.Storage/storageAccounts', toLower('windVM1storage'))]",
            "[resourceId('Microsoft.Network/networkInterfaces', 'windVM1-NetworkInterface')]"
        ],
        "tags": {
            "displayName": "windVM1"
        },
        "properties": {
            "hardwareProfile": {
                "vmSize": "Standard_A2_v2"
            },
            "osProfile": {
                "computerName": "windVM1",
                "adminUsername": "azureuser",
                "adminPassword": "Hrituj@251226"
            },
            "storageProfile": {
                "imageReference": {
                    "publisher": "MicrosoftWindowsServer",
                    "offer": "WindowsServer",
                    "sku": "2022-Datacenter",
                    "version": "latest"
                },
                "osDisk": {
                    "name": "windVM1OSDisk",
                    "caching": "ReadWrite",
                    "createOption": "FromImage"
                }
            },
            "networkProfile": {
                "networkInterfaces": [
                    {
                        "id": "[resourceId('Microsoft.Network/networkInterfaces', 'windVM1-NetworkInterface')]"
                    }
                ]
            },
            "diagnosticsProfile": {
                "bootDiagnostics": {
                    "enabled": false
                    
            }
        }
}}],
    "outputs": {}
}